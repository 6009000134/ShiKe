
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/CMS/Views/Shared/_Layout.cshtml";
}
@*@section header{
        <script src="https://cdn.bootcss.com/vue/2.4.2/vue.min.js"></script>

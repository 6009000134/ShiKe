
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width" />
    <script src=@Url.Content("~/scripts/jquery-1.9.1.min.js")></script>
    <link href=@Url.Content("~/Bootstrap/css/bootstrap.css") rel="stylesheet" />
    <script src=@Url.Content("~/Bootstrap/js/bootstrap.js")></script>
    <script src="https://cdn.bootcss.com/vue/2.4.2/vue.min.js"></script>
    <script>
        $().ready(function () {
            var h = $(window).height() / 3;
            $("#top").attr("style", "margin-top:" + h + "px")
        })
    </script>
</head>
<body style="background-color:black;">
    <div class="container">

        @Html.BeginForm("Login", "Default", new { area = "CMS" },FormMethod.Post)
        {
        <div id="top" class="row col-lg-4 col-lg-offset-4 ">
            <h1 style="color:white;">System Management</h1>
        </div>
        <div class="form-horizontal row col-lg-4 col-lg-offset-4">
            <div class="form-group">
                <label class="col-lg-3 control-label" style="color:white;">用户名：</label>
                <div class="col-lg-9">
                    <input type="text" placeholder="请输入用户名" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-3 control-label" style="color:white;">密&nbsp;&nbsp;&nbsp;码：</label>
                <div class="col-lg-9">
                    <input type="password" placeholder="请输入密码" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-9 col-lg-offset-3">
                    <div class="checkbox">
                        <label class="" style="color:white;"><input type="checkbox" />记住我&nbsp;&nbsp;&nbsp;</label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-9 col-lg-offset-3">
                    <div class="checkbox">
                        <input type="submit" class="btn btn-default" value="登录" />
                    </div>
                </div>
            </div>
        </div>
        }

    </div>
</body>
</html>

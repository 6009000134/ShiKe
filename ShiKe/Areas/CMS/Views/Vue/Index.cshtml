<style>
    .class2 {
        color: red;
    }
</style>
<h1>Vue.js</h1>
<div id="app">

    <h2>模板语法</h2>
    <div>
        <ul>
            <li>
                <span>message:{{message}}</span>
            </li>
            <li>
                <span>fun1:{{fun1()}}</span>
            </li>
            <li>
                <span>5+5=?,Vue结果：{{5+5}}</span>
            </li>
            <li>
                <span>ok=true?'Yes':false。Vue结果： {{ok=true?'Yes':'No'}}</span>
            </li>
            <li>
                <span>v-html="tml":</span>
                <div v-html="tml"></div>
            </li>
            <li>
                绑定html属性，v-bind:给div绑定id，值为List999
                <div v-bind:class="class2">
                    123
                </div>
                <div v-bind:id="'List'+id">
                </div>
            </li>
            <li>
                双向绑定v-model:<br />
                Message:{{message}}<br />
                <input type="text" v-model="message" />
            </li>
            <li>
                监听事件v-on:<br />
                Message:{{message}}<br />
                <button v-on:click="fun2">反转Message的值</button>
            </li>
            <li>
                过滤器filters:<br />
                将{{message}}的首字母小写，其余大写<br />
                {{message|filtersFun}}
            </li>
            <li>
                <span>v-bind:</span><br />
                <div v-bind:class="{'class2':fail}">
                    asd
                </div>
            </li>
            <li> 
                <span>v-if</span><br />
                <label :class="{'class2':flag}"><input type="checkbox" v-model="flag"  />根据checkbox的值，决定if块的内容是否呈现,同时改变字体颜色</label>
                <div v-if="flag">
                    <h1>Hi</h1>
                </div>
            </li>
            <li>
                <span>v-show</span><br />
                <input type="checkbox" v-model="flag" />根据checkbox的值，决定v-Show块的内容是否呈现,同时改变字体颜色</label>
                <span v-show="flag">Show</span>
            </li>
        </ul>
    </div>
    <div style="width:100%;height:50px;margin-top:30px;">

    </div>
</div>

<script type="text/javascript">

    var vm = new Vue({
        el: "#app",
        data: {
            message: "Hello",
            tml: "<h1 style='color:red;'>Tml</h1>",
            class1: false,
            class2: "class2",
            ok: true,
            id: 999,
            fail: false,
            flag:true
        },
        methods: {
            fun1: function () {
                return this.message + "+1=Hello1";
            },
            fun2: function () {//反转字符串
                this.message = this.message.split('').reverse().join('');
            }
        },
        filters: {
            filtersFun: function (value) {
                if (value == null)
                    return '';
                value = value.toString();
                return value = value.charAt(0).toLowerCase() + value.slice(1).toUpperCase();
            }
        }
    })
    function fun1() {
        console.log(vm.data);
        console.log(vm.$data);
        console.log(vm.fun1);
    }
</script>
